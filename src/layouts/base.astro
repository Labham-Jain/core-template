---
import { DESCRIPTION, TITLE, META_DIR } from '@meta/base';

const {title = TITLE, description = DESCRIPTION} = Astro.props as Record<string, string>;

---

<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  {description ? <meta name="description" content={description}/> : null}

  {META_DIR ? (
    <>
      <link rel="apple-touch-icon" sizes="180x180" href={`${META_DIR}/apple-touch-icon.png`} />
      <link rel="icon" type="image/png" sizes="32x32" href={`${META_DIR}/favicon-32x32.png`} />
      <link rel="icon" type="image/png" sizes="16x16" href={`${META_DIR}/favicon-16x16.png`} />
      <link rel="manifest" href={`${META_DIR}/site.webmanifest`} />
      <meta name="apple-mobile-web-app-title" content={TITLE} />
      <meta name="application-name" content={TITLE} />
      <meta name="msapplication-TileColor" content="#da532c">
      <meta name="theme-color" content="#ffffff" />
    </>
  ) : null}

</head>
<body>
  <slot />
</body>
</html>